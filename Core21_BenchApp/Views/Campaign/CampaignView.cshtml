
@{
    ViewData["Title"] = "CampaignView";
}


<h2>Campaign Detailed View</h2>
<h2>Campaign Name: @Model.Name</h2>



<h4>Links:</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Optional</th>
            <th>Reference</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model.Links)
        {
            var route = "ComponentPage/" + @item.Name;
            <tr>

                <td>@item.Name</td>
                <td>@item.Optional</td>
                <td>@item.Reference</td>
            </tr>
        }
    </tbody>
</table>


<h4>Methods:</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Visibility</th>
            <th>Reference</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model.Methods)
        {
            <tr>

                <td>@item.Name</td>
                <td>@item.Visibility</td>
                <td>@item.Reference</td>
            </tr>
        }
    </tbody>
</table>